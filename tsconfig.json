{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                                  
    /* Modules */
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true ,
    
    "jsx": "react", 
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  }
}
